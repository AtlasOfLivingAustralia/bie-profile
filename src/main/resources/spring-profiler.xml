<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <!--  Scan source files for annotations for DI -->
    <context:component-scan base-package="org.ala"/>
    
    <!-- Over-ride bean properties - including dataSource configs -->
    <context:property-override location="classpath:bie.properties" ignore-unresolvable="true" ignore-resource-not-found="true"/>
    
    <bean id="CBIndexSearch" class="au.org.ala.checklist.lucene.CBIndexSearch" lazy-init="true">
        <constructor-arg value="/data/lucene/namematchingv1_1"/>
    </bean>

    <bean id="cassandraHelper" class="org.ala.dao.CassandraPelopsHelper" init-method="init" lazy-init="true"/>
    <!--  bean id="cassandraHelper" class="org.ala.dao.CassandraHelper" init-method="init" lazy-init="true"/ -->
    
    <bean id="taxonConceptDao" class="org.ala.dao.TaxonConceptSHDaoImpl" init-method="init" lazy-init="true">
      <property name="storeHelper" ref="cassandraHelper"/>
    </bean>
    
    <bean id="geoRegionDao" class="org.ala.dao.GeoRegionDaoImpl" lazy-init="true">
      <property name="storeHelper" ref="cassandraHelper"/>
    </bean>
    
    <bean id="rankingDao" class="org.ala.dao.RankingDaoImpl" lazy-init="true">
      <property name="storeHelper" ref="cassandraHelper"/>
    </bean>
    
    <bean id="infoSourceDAO" class="org.ala.dao.InfoSourceDAOImpl" lazy-init="true">
      <property name="dataSource" ref="dataSource"/>
    </bean>
    

    <bean id="classificationRank" class="org.ala.util.ClassificationRank" init-method="init" lazy-init="true">

    </bean>
    

    
    <!-- data source -->
  <bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
    <property name="driverClassName" value="${dataSource.driverClassName}"/>
    <property name="url" value="${dataSource.url}"/>
    <property name="username" value="${dataSource.username}"/>
    <property name="password" value="${dataSource.password}"/>
    <property name="initialSize" value="1"/>
    <property name="maxActive" value="25"/>
    <property name="maxIdle" value="10"/>
    <property name="maxWait" value="30000"/>
    <property name="poolPreparedStatements" value="true"/>
</bean>

   <bean id="googleSitemapGenerator" class="org.ala.report.GoogleSitemapGenerator" lazy-init="true">
     <property name="storeHelper" ref="cassandraHelper"/>
     <property name="fileName" value="/data/sitemaps/sitemap"/>
   </bean>
    
</beans>